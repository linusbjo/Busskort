
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterPageNormal.cshtml";
}

<h2 style="text-align:center; font-family: sans-serif">Ansökan om busskort</h2>
<br /><br />

<!--Formulär för ansökan (lär väl fixa någon post senare, typ form action)-->

<div class="container">
    @using (Html.BeginForm("Create", "Anmalan", FormMethod.Post))
    {
        <div class="form-row">

            <div class="form-group col-md-6">
                <h3 style="font-family: sans-serif">Skola</h3><br />

                <label for="exampleFormControlSelect1"><b>Årskurs</b></label>             
                @Html.DropDownList("year", (IEnumerable<SelectListItem>)ViewBag.DropDownYears, new { id = "exampleFormControlSelect1", @class = "form-control" })

                <label for="inputSkola"><b>Skola</b></label>
                <input type="text" class="form-control" id="inputSkola" placeholder="Skriv in skola" name="skolaNamn" required>
            </div>

            <div class="form-group col-md-6">
                <h3 style="font-family: sans-serif">Barn</h3><br />
                <label for="inputB_Personnummer"><b>Personnummer</b></label>
                <input type="text" class="form-control" id="inputB_Personnummer" placeholder="ÅÅMMDD-XXXX" name="barnPersonnummer" required>
                <label for="inputB_fornamn"><b>Förnamn</b></label>
                <input type="text" class="form-control" id="inputB_fornamn" placeholder="Förnamn" name="barnFörnamn" required>
                <label for="inputB_efternamn"><b>Efternamn</b></label>
                <input type="text" class="form-control" id="inputB_efternamn" placeholder="Efternamn" name="barnEfternamn" required>
            </div>

            <div class="form-group col-md-6">
                <h3 style="font-family: sans-serif">Målsman</h3><br />
                <label for="inputM_Personnummer"><b>Personnummer</b></label>
                <input type="text" class="form-control" id="inputF_Personnummer" placeholder="ÅÅMMDD-XXXX" name="FörälderPersonnummer" required>
                <label for="inputM_fornamn"><b>Förnamn</b></label>
                <input type="text" class="form-control" id="inputM_fornamn" placeholder="Förnamn" name="Förnamn" required>
                <label for="inputM_efternamn"><b>Efternamn</b></label>
                <input type="text" class="form-control" id="inputM_efternamn" placeholder="Efternamn" name="Efternamn" required>
            </div>

            <div class="form-group col-md-6">
                <h3 style="font-family: sans-serif">Kontakt</h3><br />

                <label for="inputEmail"><b>E-post</b></label>
                <input type="email" class="form-control" id="inputEmail" placeholder="E-post" name="E_post" required>
                <label for="inputTelefon"><b>Telefon</b></label>
                <input type="text" class="form-control" id="inputTelefon" placeholder="Telefonnummer" name="inputTelefon" required>
            </div>

            <div class="form-group col-md-6">
                <h3 style="font-family: sans-serif">Adress</h3><br />

                <label for="inputAdress"><b>Adress</b></label>
                <input type="text" class="form-control" id="inputAdress" placeholder="Gatunamn t.ex. Mjölnaregatan 16" name="Adress" required>
                <label for="inputPostnummer"><b>Postnummer</b></label>
                <input type="text" class="form-control" id="inputPostnummer" placeholder="Postnummer" name="Postnummer" required>
                <label for="inputOrt"><b>Ort</b></label>
                <input type="text" class="form-control" id="inputOrt" placeholder="Ort" name="Ort" required>

            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">  Skicka  </button>
    }

</div>



