@model Busskort.BusskortServiceReference.Anmälan


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterPageNormal.cshtml";
}



    <div>
        @using (Html.BeginForm("EditConfirmed", "Admin", FormMethod.Post))
        {
        <div class="container">
            <h1 class="pagetitle" font-family: sans-serif">Edit</h1>
            <h6 font-family: sans-serif">Anmälan ID: @Model.ID</h6>
            <br />


            @Html.Partial("_AdminAnmalanPart")

            <div class="form-row">

                <div class="form-group col-md-6">
                    <h3 class="formlabel" style="font-family: sans-serif">Åtgärd</h3><br />

                    <label for="exampleFormControlSelect1"><b>Beviljad</b></label>
                    @Html.DropDownList("beviljad", (IEnumerable<SelectListItem>)ViewBag.DropDownBeviljad, new { id = "exampleFormControlSelect1", @class = "form-control" })

                    <label for="inputSkola"><b>Motivering</b></label>
                    <textarea class="form-control" id="motivering" placeholder="Skriv motivering..." name="motiveringName" required style="height:150px">@Model.Motivering</textarea>
                </div>


            </div>

            <button type="submit" class="btn btn-primary">Skicka</button>

        </div>
        }
    </div>
<br />
<br />
